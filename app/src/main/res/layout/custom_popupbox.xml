<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <View
        android:id="@+id/viewUserDetail"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAvtarpop"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimaryDark"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/viewUserDetail"
        app:layout_constraintStart_toStartOf="@+id/viewUserDetail"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_user" />

    <ImageView
        android:id="@+id/imgPhone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSaveContact"
        app:layout_constraintStart_toStartOf="@+id/viewUserDetail"
        app:layout_constraintTop_toBottomOf="@+id/imgAvtarpop"
        app:srcCompat="@drawable/icon_call" />

    <ImageView
        android:id="@+id/imgSaveContact"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewUserDetail"
        app:layout_constraintEnd_toStartOf="@+id/imgMessage"
        app:layout_constraintStart_toEndOf="@+id/imgPhone"
        app:layout_constraintTop_toBottomOf="@+id/imgAvtarpop"
        app:srcCompat="@drawable/icon_add_contact" />

    <ImageView
        android:id="@+id/imgMessage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgSaveContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvtarpop"
        app:srcCompat="@drawable/icon_sms" />
</android.support.constraint.ConstraintLayout>